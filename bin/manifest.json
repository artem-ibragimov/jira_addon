{
    "manifest_version": 2,
    "author": "artem.ibragimov",
    "name": "Netflix subs",
    "description": "Adaptive subs for Netflix",
    "version": "0.0.1",
    "permissions": [
        "webRequest",
        "<all_urls>"
    ],
    "icons": {
        "16": "./asset/i16.png",
        "32": "./asset/i32.png",
        "48": "./asset/i48.png",
        "128": "./asset/i128.png",
        "225": "./asset/i225.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.netflix.com/*"
            ],
            "all_frames": true,
            "js": [
                "main.js"
            ]
        }
    ]
}