{
    "manifest_version": 2,
    "author": "artem.ibragimov",
    "name": "Suby",
    "description": "Adaptive subtitles",
    "version": "0.0.1",
    "permissions": [
        "webRequest",
        "<all_urls>"
    ],
    "icons": {
        "16": "./asset/i16.png",
        "48": "./asset/i48.png",
        "128": "./asset/i128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "main.js"
            ]
        }
    ],
    "options_page": "options.html"
}